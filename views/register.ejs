<!DOCTYPE html>
<html>
  <%- include("partials/head.ejs") %>
  <body>
    <div class="container mx-auto flex justify-center items-center h-screen">
      <form class="w-4/12" id="register">
        <legend>Register</legend>
        <fieldset class="bg-white border-2 border-gray-100 p-3 mb-4">
          <div class="mb-4">
            <input type="text" name="email" id="email" placeholder="E-mail" />
            <p
              class="mt-1 px-4 text-rose-700 text-sm font-semibold"
              data-error="email"
            ></p>
          </div>
          <div class="mb-4">
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Password"
              autocomplete="off"
            />
            <p
              class="mt-1 px-4 text-rose-700 text-sm font-semibold"
              data-error="password"
            ></p>
          </div>
          <div>
            <input
              type="password"
              name="passwordConfirm"
              id="passwordConfirm"
              placeholder="Confirm Password"
              autocomplete="off"
            />
            <p
              class="mt-1 px-4 text-rose-700 text-sm font-semibold"
              data-error="passwordConfirm"
            ></p>
          </div>
        </fieldset>
        <div>
          <button class="w-full">Create an account</button>
        </div>
      </form>
    </div>

    <script>
      // Selectors
      const formRegister = document.querySelector("#register");
      const email = document.querySelector("#email"),
        password = document.querySelector("#password"),
        passwordConfirm = document.querySelector("#passwordConfirm");

      // Methods
      const resetValidate = () => {
        document.querySelectorAll("[data-error]").forEach((errElm) => {
          errElm.innerText = "";
        });
      };

      const submitHandler = async (event) => {
        event.preventDefault();
        resetValidate();

        const payload = {
          email: email.value,
          password: password.value,
          passwordConfirm: passwordConfirm.value,
        };

        const options = {
          credentials: "same-origin",
          headers: {
            "Content-Type": "application/json",
          },
        };

        try {
          const response = await fetch("/register", {
            ...options,
            method: "POST",
            body: JSON.stringify(payload),
          });
          const data = await response.json();
          if (data.error) {
            Object.keys(data.error).forEach((err) => {
              document.querySelector(`[data-error=${err}]`).innerText =
                data.error[err];
            });
          }
          if (data.user) {
            location.assign("/dashboard");
          }
        } catch (error) {
          console.log(error);
        }
      };

      // Event Listeners
      formRegister.addEventListener("submit", submitHandler);
    </script>
  </body>
</html>
